<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yoga.lifeshare.Main">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <ImageButton
            android:layout_width="match_parent"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="160dp"
            android:background="@drawable/bg" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/lay1"
           android:layout_below="@+id/imageView"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:background="@drawable/bg">

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:layout_weight="0.47"
               android:text="Name"
               android:textStyle="bold" />
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="20dp"
               android:id="@+id/bloseek"/>

       </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:id="@+id/lay2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="0.47"
                android:text="Place"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/place"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay2"
            android:id="@+id/lay3"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="0.47"
                android:text="BloodGroup"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/bg"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay3"
            android:id="@+id/lay4"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="0.47"
                android:text="Email"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:padding="20dp"
                android:id="@+id/email1"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay4"
            android:id="@+id/lay5"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="0.47"
                android:text="Phone"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/phone"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay5"
            android:id="@+id/lay6"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="0.47"
                android:text="Description"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/desc"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay6"
            android:id="@+id/lay7"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="0.47"
                android:text="Posted By"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/postedby"
                 />

        </LinearLayout>


        <Button
            android:text="Donate"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/lay7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/button"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
</ScrollView>










